<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:id="@+id/ministry_info_image"
        android:src="@drawable/cru_logo_default"
        android:layout_marginTop="20dp"
        android:layout_weight="7" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Aliquam sollicitudin mi ut libero auctor sollicitudin. Praesent suscipit, arcu et mollis vulputate, augue sem aliquet elit, a lobortis neque ex id eros."
        android:id="@+id/ministry_info_description"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_weight="9" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@android:color/darker_gray"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/ministry_info_campuses"
        android:layout_weight="7"
        android:textAlignment="center"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp" />

</LinearLayout>