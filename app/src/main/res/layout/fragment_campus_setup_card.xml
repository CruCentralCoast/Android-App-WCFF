<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <CheckBox
        android:id="@+id/campus_setup_chk_box"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:padding="5dp"
        android:id="@+id/campus_card_image"
        android:layout_toRightOf="@+id/campus_setup_chk_box"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/campus_card_image"
        android:id="@+id/campus_card_text"
        android:text="This is a campus"
        android:textSize="15dp"
        android:textAlignment="center" />

</RelativeLayout>