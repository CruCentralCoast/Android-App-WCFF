<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Enter the time you would like to leave."
        android:textSize="17sp"
        android:id="@+id/enter_time_text"
        android:textColor="@color/colorPrimary_cruGray"/>

    <TimePicker
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/time_picker_time"/>

    <Button
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:id="@+id/filter_time_button"
        android:text="Search"
        android:layout_gravity="center_horizontal"
        android:background="@color/colorPrimary_cruGold"/>
</LinearLayout>