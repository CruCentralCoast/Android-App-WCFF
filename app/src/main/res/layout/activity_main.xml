<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <TextView android:text="Hello World!\n    - Will Code For Food :)" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/helloTextView" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Send Notification"
        android:id="@+id/button_notify"
        android:layout_below="@+id/helloTextView"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Test Calendar Integration"
        android:id="@+id/button"
        android:onClick="testCalendar"
        android:layout_below="@+id/button_notify"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="41dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Edit Existing Event"
        android:id="@+id/cal_edit_button"
        android:layout_below="@+id/button"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="44dp"
        android:onClick="testCalendarEdit"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Test SMS Messaging"
        android:id="@+id/sms_button"
        android:layout_below="@+id/cal_edit_button"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="44dp"
        android:onClick="testSMS"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Get Ministries from DB"
        android:id="@+id/get_ministries_button"
        android:layout_below="@+id/sms_button"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="39dp"
        android:onClick="testDB" />

</RelativeLayout>
