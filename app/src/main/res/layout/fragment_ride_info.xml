<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerHorizontal="true" >

    <!-- Event Name -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:id="@+id/ride_info_event"
        android:layout_marginTop="40dp"
        android:text="Event: Sophomore Social"
        android:textSize="20sp"
        android:padding="5dp" />
    <View
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:layout_below="@+id/ride_info_event"
        android:background="@color/colorPrimary_cruGold"
        android:paddingTop="10dp"
        android:id="@+id/ride_info_div1"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="30dp" />

    <!-- Driver Name -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/ride_info_div1"
        android:id="@+id/ride_info_driver"
        android:text="Driver: Kayla (female)"
        android:textSize="20sp"
        android:padding="5dp"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:layout_below="@+id/ride_info_driver"
        android:background="@color/colorPrimary_cruGold"
        android:paddingTop="10dp"
        android:id="@+id/ride_info_div2"
        android:layout_marginBottom="30dp"
        android:layout_marginTop="30dp" />

    <!-- Pickup Location -->
    <ImageButton
        android:id="@+id/ride_info_map"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ride_info_div2"
        android:background="@null"
        android:paddingLeft="20dp"
        android:src="@drawable/map"/>
    <TextView
        android:id="@+id/ride_info_loc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ride_info_div2"
        android:layout_toEndOf="@id/ride_info_map"
        android:layout_toRightOf="@id/ride_info_map"
        android:paddingTop="6dp"
        android:paddingLeft="30dp"
        android:paddingRight="10dp"
        android:textSize="18sp"
        android:text="PICKUP LOCATION" />

    <!-- Time Leaving -->
    <ImageButton
        android:id="@+id/ride_info_calendar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ride_info_loc"
        android:background="@null"
        android:paddingTop="20dp"
        android:paddingLeft="20dp"
        android:src="@drawable/clock"/>
    <TextView
        android:id="@+id/ride_info_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ride_info_loc"
        android:layout_toEndOf="@id/ride_info_calendar"
        android:layout_toRightOf="@id/ride_info_calendar"
        android:paddingTop="21dp"
        android:paddingLeft="30dp"
        android:paddingRight="10dp"
        android:textSize="18sp"
        android:text="TIME LEAVING" />

    <!-- Direction -->
    <ImageButton
        android:id="@+id/ride_info_arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ride_info_time"
        android:background="@null"
        android:paddingTop="20dp"
        android:paddingLeft="20dp"
        android:src="@drawable/direction"/>
    <TextView
        android:id="@+id/ride_info_direction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ride_info_time"
        android:layout_toEndOf="@id/ride_info_arrow"
        android:layout_toRightOf="@id/ride_info_arrow"
        android:paddingTop="24dp"
        android:paddingLeft="30dp"
        android:paddingRight="10dp"
        android:textSize="18sp"
        android:text="DIRECTION" />

    <!-- Passenger/Driver Info -->
    <ImageButton
        android:id="@+id/ride_info_car"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ride_info_direction"
        android:background="@null"
        android:paddingTop="20dp"
        android:paddingLeft="20dp"
        android:src="@drawable/car_yes"/>
    <TextView
        android:id="@+id/ride_info_more"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ride_info_direction"
        android:layout_toEndOf="@id/ride_info_car"
        android:layout_toRightOf="@id/ride_info_car"
        android:paddingTop="26dp"
        android:paddingLeft="30dp"
        android:paddingRight="10dp"
        android:textSize="18sp"
        android:text="3 SEATS LEFT" />

    <!-- Join/Leave Button -->
    <Button
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:text="Join Ride"
        android:textColor="@color/colorPrimary_cruGray"
        android:textSize="15sp"
        android:id="@+id/btn_ride_info"
        android:layout_gravity="center_horizontal"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@color/colorPrimary_cruGold"
        android:layout_marginBottom="10dp" />

</RelativeLayout>