<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/campus_setup_card"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:drawable/dialog_holo_light_frame">

    <RelativeLayout
        android:id="@+id/campus_setup_card_under"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white">

        <ImageView
            android:id="@+id/campus_card_image"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:paddingTop="10dp" />

        <TextView
            android:id="@+id/campus_card_text"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_below="@+id/campus_card_image"
            android:paddingLeft="10dp"
            android:text="This is a campus"
            android:textSize="15sp" />

    </RelativeLayout>

    <TextView
        android:id="@+id/campus_setup_card_over"
        android:layout_width="fill_parent"
        android:layout_height="180dp"
        android:layout_alignBaseline="@+id/campus_setup_card_under"
        android:alpha=".3"
        android:background="@color/colorPrimary_cruGrayLight"
        android:text="" />

</RelativeLayout>